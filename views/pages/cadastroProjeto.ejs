<%- include('../partials/header') %>

<section class="page-title">
    <h1>Adicionar Novo Projeto</h1>
</section>

<div class="form-container">
    <form action="/projetos/criar" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="titulo">Título do Projeto</label>
            <input type="text" id="titulo" name="titulo" required>
        </div>

        <div class="form-group">
            <label for="descricao">Descrição</label>
            <textarea id="descricao" name="descricao" rows="5" required></textarea>
        </div>

        <div class="form-group">
            <label for="link">Link do Projeto (GitHub, etc)</label>
            <input type="url" id="link" name="link">
        </div>

        <div class="form-group">
            <label for="tecnologias">Tecnologias Utilizadas</label>
            <input type="text" id="tecnologias" name="tecnologias" placeholder="Ex: Node.js, React, MySQL">
        </div>

        <div class="form-group">
            <label for="status">Status</label>
            <select id="status" name="status" required>
                <option value="em andamento">Em Andamento</option>
                <option value="concluido">Concluído</option>
            </select>
        </div>

        <div class="form-group">
            <label for="foto">Foto do Projeto</label>
            <input type="file" id="foto" name="foto" accept="image/*">
        </div>

        <button type="submit">Adicionar Projeto</button>
    </form>
</div>

<%- include('../partials/footer') %>
