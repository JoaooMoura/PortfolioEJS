<%- include('../partials/header') %>

<div class="dashboard-container">
  <h1>Dashboard</h1>

  <div class="dashboard-stats">
    <div class="stat-card">
      <h3>Total de Disciplinas</h3>
      <p class="stat-number"><%= totalDisciplinas %></p>
    </div>

    <div class="stat-card">
      <h3>Projetos Conclu√≠dos</h3>
      <p class="stat-number"><%= projetosConcluidos %></p>
    </div>

    <div class="stat-card">
      <h3>Tecnologias Top</h3>
      <div class="tech-list">
        <% if (topTechs && topTechs.length > 0) { %>
          <% topTechs.forEach(tech => { %>
            <span class="tech-badge"><%= tech.tech %> (<%= tech.count %>)</span>
          <% }); %>
        <% } else { %>
          <p>Nenhuma tecnologia registrada</p>
        <% } %>
      </div>
    </div>
  </div>
</div>

