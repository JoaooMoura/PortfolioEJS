<%- include('../partials/header') %>

<section class="page-title">
    <h1>Minhas Disciplinas</h1>
    <p>Os pilares do meu conhecimento técnico e teórico.</p>
</section>

<section class="add-project-section">
    <a href="/disciplinas/cadastro" class="btn-add">Adicionar Nova Disciplina</a>
</section>

<div class="disciplinas-grid">
    <% disciplinas.forEach((disciplina, index) => { %>
        <div class="disciplina-card">
            
            <span class="disciplina-nome"><%= disciplina %></span>

            <div class="card-actions">
                <a href="/disciplinas/editar/<%= index %>" class="btn-edit">Editar</a>
                <a href="/disciplinas/excluir/<%= index %>" class="btn-delete" onclick="return confirm('Tem certeza que deseja excluir esta disciplina?');">Excluir</a>
            </div>

        </div>
    <% }) %>
</div>

<%- include('../partials/footer') %>