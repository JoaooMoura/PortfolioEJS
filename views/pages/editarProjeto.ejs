<%- include('../partials/header') %>

<section class="page-title">
    <h1>Editar Projeto</h1>
</section>

<section class="form-container">
    <form action="/projetos/editar/<%= projeto.id %>" method="POST">
        <div class="form-group">
            <label for="title">Título do Projeto</label>
            <input type="text" id="title" name="title" value="<%= projeto.title %>" required>
        </div>
        <div class="form-group">
            <label for="description">Descrição</label>
            <textarea id="description" name="description" rows="4" required><%= projeto.description %></textarea>
        </div>
        <div class="form-group">
            <label for="imageUrl">URL da Imagem</label>
            <input type="text" id="imageUrl" name="imageUrl" value="<%= projeto.imageUrl %>" required>
        </div>
        <div class="form-group">
            <label for="link">Link do Projeto</label>
            <input type="text" id="link" name="link" value="<%= projeto.link %>" required>
        </div>
        <button type="submit">Salvar Alterações</button>
    </form>
</section>

<%- include('../partials/footer') %>