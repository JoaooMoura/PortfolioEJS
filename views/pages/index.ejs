<%- include('../partials/header') %>

<div class="hero-section">
  <h1>ğŸ“ Bem-vindo(a) ao meu PortfÃ³lio!</h1>
  <% if (informacao) { %>
    <p>OlÃ¡, meu nome Ã© <strong><%= informacao.nomeCompleto %></strong></p>
    <p>Estudando <strong><%= informacao.curso %></strong> na <strong><%= informacao.instituicao %></strong></p>
    <p>Desde <%= informacao.anoIngresso %></p>
  <% } %>
</div>

<div class="projects-preview">
  <h2>ğŸ“ Projetos em Destaque</h2>
  <% if (projetos && projetos.length > 0) { %>
    <div class="projects-grid">
      <% projetos.forEach(projeto => { %>
        <div class="project-card">
          <% if (projeto.foto) { %>
            <img src="<%= projeto.foto %>" alt="<%= projeto.titulo %>" class="project-image" onclick="this.style.maxHeight = this.style.maxHeight ? '' : '400px'; this.style.width = this.style.width ? '' : '100%';" title="Clique para expandir">
          <% } else { %>
            <div style="width: 100%; height: 200px; background-color: #ecf0f1; display: flex; align-items: center; justify-content: center; color: #7f8c8d;">
              Sem imagem
            </div>
          <% } %>
          
          <div style="padding: 1.5rem;">
            <h3><%= projeto.titulo %></h3>
            <p style="color: #7f8c8d; font-size: 0.95rem;"><%= projeto.descricao.substring(0, 100) %>...</p>
            <p>
              <span class="badge badge-<%= projeto.status === 'concluido' ? 'concluido' : 'em andamento' %>">
                <%= projeto.status %>
              </span>
            </p>
            <% if (projeto.link) { %>
              <a href="<%= projeto.link %>" target="_blank" class="btn">Ver Projeto</a>
            <% } %>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <p>Nenhum projeto cadastrado ainda.</p>
  <% } %>
</div>

