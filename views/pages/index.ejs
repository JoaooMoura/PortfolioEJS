<%- include('../partials/header') %>

<section class="hero-section">
    <div class="hero-text">
        <h1>Olá, meu nome é <br><strong><%= informacao.nomeCompleto %></strong></h1>
        <p>
            Estudando <strong><%= informacao.curso %></strong> na 
            <strong><%= informacao.instituicao %></strong> desde <%= informacao.anoIngresso %>.
        </p>
        <a href="/projetos" class="hero-cta">Ver Meus Projetos</a>
    </div>
    <div class="hero-visual">
        <img src="/uploads/projetos/eu.jpeg" alt="<%= informacao.nomeCompleto %>">
    </div>
</section>

<% if (projetos && projetos.length > 0) { %>
<section class="projects-grid">
    <h2>Projetos em Destaque</h2>
    <div class="projects-container">
        <% projetos.forEach(projeto => { %>
            <div class="project-card" style="background-image: url('<%= projeto.foto %>');">
                <div class="project-info">
                    <h3><%= projeto.titulo %></h3>
                </div>
                <div class="project-overlay">
                    <h3><%= projeto.titulo %></h3>
                    <p><%= projeto.descricao.substring(0, 100) %>...</p>
                    <div class="action-buttons">
                        <% if (projeto.link) { %>
                            <a href="<%= projeto.link %>" target="_blank" class="btn-view">Ver Projeto</a>
                        <% } %>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</section>
<% } %>

<%- include('../partials/footer') %>
