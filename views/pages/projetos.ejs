<%- include('../partials/header') %>

<section class="page-title">
    <h1>Todos os Meus Projetos</h1>
</section>

<section class="add-project-section">
    <a href="/projetos/cadastro" class="btn-add">Adicionar Novo Projeto</a>
</section>
<section class="projects-grid">
   <div class="projects-container">
    <% projects.forEach(project => { %>
        <div class="project-card" style="background-image: url('<%= project.imageUrl %>');">
            
            <div class="project-info">
                <h3><%= project.title %></h3>
            </div>

            <div class="project-overlay">
                <h3><%= project.title %></h3>
                <p><%= project.description %></p>
                <div class="action-buttons">
                    <a href="<%= project.link %>" target="_blank" class="btn-view">Ver Projeto</a>
                    <a href="/projetos/editar/<%= project.id %>" class="btn-edit">Editar</a>
                    <a href="/projetos/excluir/<%= project.id %>" class="btn-delete">Excluir</a>
                </div>
            </div>

        </div>
    <% }) %>
</div>
</section>

<%- include('../partials/footer') %>