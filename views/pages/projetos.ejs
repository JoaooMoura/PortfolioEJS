<%- include('../partials/header') %>

<section class="page-title">
    <h1>Meus Projetos</h1>
    <p>Confira os projetos que desenvolvi durante minha jornada acadÃªmica.</p>
</section>

<div class="add-project-section">
    <a href="/cadastroProjeto" class="btn-add">+ Adicionar Novo Projeto</a>
</div>

<section class="projects-grid">
    <div class="projects-container">
        <% projetos.forEach(projeto => { %>
            <div class="project-card" style="background-image: url('<%= projeto.foto %>');">
                <div class="project-info">
                    <h3><%= projeto.titulo %></h3>
                </div>
                <div class="project-overlay">
                    <h3><%= projeto.titulo %></h3>
                    <p><%= projeto.descricao.substring(0, 150) %>...</p>
                    <p style="font-size: 0.9rem; color: #aaa;"><%= projeto.tecnologias %></p>
                    <div class="action-buttons">
                        <% if (projeto.link) { %>
                            <a href="<%= projeto.link %>" target="_blank" class="btn-view">Ver Projeto</a>
                        <% } %>
                        <a href="/projetos/editar/<%= projeto.id %>" class="btn-edit">Editar</a>
                        <form action="/projetos/deletar/<%= projeto.id %>" method="POST" style="display: inline; margin: 0;">
                            <button type="submit" class="btn-delete" onclick="return confirm('Tem certeza que deseja excluir este projeto?')" style="border: none; cursor: pointer;">Excluir</button>
                        </form>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</section>

<%- include('../partials/footer') %>
