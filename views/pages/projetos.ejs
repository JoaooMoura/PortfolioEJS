<%- include('../partials/header') %>

<section class="page-title">
    <h1>Todos os Meus Projetos</h1>
</section>

<section class="add-project-section">
    <a href="/projetos/cadastro" class="btn-add">Adicionar Novo Projeto</a>
</section>
<section class="projects-grid">
    <div class="projects-container">
        <% projects.forEach(project => { %>
            <div class="project-card">
                <img src="<%= project.imageUrl %>" alt="<%= project.title %>">
                <h3><%= project.title %></h3>
                <p><%= project.description %></p>
                <a href="<%= project.link %>" target="_blank" class="btn-project">Ver Projeto</a>
                
                <a href="/projetos/excluir/<%= project.id %>" class="btn-delete">Excluir</a>
                <a href="/projetos/editar/<%= project.id %>" class="btn-editar">Editar</a>
                </div>
        <% }) %>
    </div>
</section>

<%- include('../partials/footer') %>