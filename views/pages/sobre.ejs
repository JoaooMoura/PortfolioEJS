<%- include('../partials/header') %>

<div class="sobre-container">
  <h1>Sobre Mim</h1>
  <% if (informacao) { %>
    <div class="info-grid">
      <div class="info-item">
        <label>Nome Completo:</label>
        <p><%= informacao.nomeCompleto %></p>
      </div>
      <div class="info-item">
        <label>Curso:</label>
        <p><%= informacao.curso %></p>
      </div>
      <div class="info-item">
        <label>Instituição:</label>
        <p><%= informacao.instituicao %></p>
      </div>
      <div class="info-item">
        <label>Ano de Ingresso:</label>
        <p><%= informacao.anoIngresso %></p>
      </div>
      <div class="info-item">
        <label>Email:</label>
        <p><a href="mailto:<%= informacao.email %>"><%= informacao.email %></a></p>
      </div>
      <div class="info-item">
        <label>Telefone:</label>
        <p><%= informacao.telefone %></p>
      </div>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>
